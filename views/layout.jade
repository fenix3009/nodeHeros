doctype html
html
    head
        title= title
        mixin styleLink(dir,css)
            link(rel='stylesheet', href='/stylesheets/#{dir}/#{css}.css')
        
        mixin scriptSrc(dir,js)
            script(type='text/javascript',src='/javascripts/#{dir}/#{js}.js')

        +scriptSrc('angular','angular')
        +scriptSrc('angular-animate','angular-animate')
        +scriptSrc('angular-toastr/dist','angular-toastr.tpls')
        +scriptSrc('angular-touch','angular-touch')
        +scriptSrc('angular-ui-bootstrap','ui-bootstrap-tpls-1.3.3')
        +scriptSrc('misScripts','cliente')

        +styleLink('bootstrap','bootstrap.min')
        +styleLink('toastr','angular-toastr.min')
        +styleLink('misCss','style')
  
    body(ng-app="myApp")
        nav.navbar.navbar-inverse.navbar-fixed-top.animated.bounceInDown(role='navigation')
            .container
                .navbar-header
                    button.navbar-toggle(type='button', ng-init='navCollapsed = true', ng-click='navCollapsed = !navCollapsed')
                        span.sr-only Toggle navigation
                        span.icon-bar
                        span.icon-bar
                        span.icon-bar
                    a.navbar-brand(href='#'): img(src="/images/superheroes_logo.png",alt="")
                .collapse.navbar-collapse(ng-class="!navCollapsed && 'in'", ng-click='navCollapsed=true')
                    ul.nav.navbar-nav
                        li: a(href='#') Link
                        li: a(href='#') Link
                        li: a(href='#') Link
        div.container( ng-controller='MiControl')
            .page-header
                h1.text-center Ejemplo de angular con nodejs y jade
            block content
